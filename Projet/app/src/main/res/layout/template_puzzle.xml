<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".gameview.GameViewPuzzle">

    <TextView
        android:id="@+id/nomPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/stanberry"
        android:text="Puzzle"
        android:textColor="@color/bleu_fonce"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zonePuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/bleu_fonce"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomPuzzle">

        <ImageView
            android:id="@+id/p1"
            android:layout_width="@dimen/creuxW"
            android:layout_height="@dimen/creuxH"
            android:src="@drawable/_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="@dimen/pleinBordW"
            android:layout_height="@dimen/pleinBordH"
            android:layout_marginLeft="36dp"
            android:src="@drawable/_2"
            app:layout_constraintStart_toStartOf="@id/p1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/p3"
            android:layout_width="@dimen/creuxW"
            android:layout_height="@dimen/creuxH"
            android:layout_marginLeft="70dp"
            android:src="@drawable/_3"
            app:layout_constraintStart_toStartOf="@id/p2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/p4"
            android:layout_width="@dimen/pleinBordW"
            android:layout_height="@dimen/pleinBordH"
            android:layout_marginLeft="36dp"
            android:src="@drawable/_4"
            app:layout_constraintStart_toStartOf="@id/p3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/p5"
            android:layout_width="@dimen/creuxW"
            android:layout_height="@dimen/creuxH"
            android:layout_marginLeft="70dp"
            android:src="@drawable/_5"
            app:layout_constraintStart_toStartOf="@id/p4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/p6"
            android:layout_width="@dimen/pleinAngleW"
            android:layout_height="@dimen/pleinAngleH"
            android:layout_marginLeft="36dp"
            android:src="@drawable/_6"
            app:layout_constraintStart_toStartOf="@id/p5"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/zonePuzzle">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/piece1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/_3" />

                <ImageView
                    android:id="@+id/piece2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/_6" />

                <ImageView
                    android:id="@+id/piece3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/_1" />

                <ImageView
                    android:id="@+id/piece4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/_4" />

                <ImageView
                    android:id="@+id/piece5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/_2" />

                <ImageView
                    android:id="@+id/piece6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/_5" />
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>