<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ecransFins.FinPuzzle">

    <TextView
        android:id="@+id/felicitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Félicitations !"
        android:textSize="25dp"
        android:textColor="@color/bleu_fonce"
        android:fontFamily="@font/stanberry"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/resultPuzzle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/felicitations"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/infosPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:textSize="20dp"
        android:textColor="@color/orange"
        android:fontFamily="@font/stanberry"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultPuzzle"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/quitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="110dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/bleu_fonce"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingVertical="7dp"
        android:paddingHorizontal="10dp"
        android:text="Retourner à l'accueil"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>